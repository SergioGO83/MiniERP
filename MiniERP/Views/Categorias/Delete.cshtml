@model MiniERP.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h2>Eliminar</h2>

<h4>¿Seguro que deseas eliminar esta categoría?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
</dl>

@if (Model.Productos != null && Model.Productos.Any())
{
    <div class="alert alert-warning">
        Esta categoría tiene productos asignados.<br />
        <strong>No se puede eliminar hasta reasignar o borrar los productos.</strong>
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" @(Model.Productos != null && Model.Productos.Any() ? "disabled" : "")>Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
