@model MiniERP.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h2>Eliminar Empleado</h2>

<h4>¿Estás seguro de que deseas eliminar este empleado?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Edad</dt>
    <dd class="col-sm-10">@Model.Edad</dd>

    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.Departamento?.Nombre</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
