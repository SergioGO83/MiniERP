@model MiniERP.Models.Departamento

@{
    ViewData["Title"] = "Eliminar Departamento";
}

<h2>Eliminar</h2>

<h4>¿Seguro que deseas eliminar este departamento?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
</dl>

@if (Model.Empleados != null && Model.Empleados.Any())
{
    <div class="alert alert-warning">
        Este departamento tiene empleados asignados. <br />
        <strong>No se puede eliminar hasta reasignar o borrar los empleados.</strong>
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" @(Model.Empleados != null && Model.Empleados.Any() ? "disabled" : "")>Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
