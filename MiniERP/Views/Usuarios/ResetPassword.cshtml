@model MiniERP.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Resetear Contraseña";
}

<h2 class="mb-4">Resetear Contraseña</h2>

<form asp-action="ResetPassword" method="post" class="shadow p-4 bg-light rounded">
    <input type="hidden" asp-for="UserId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-key"></i> Guardar nueva contraseña
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</form>
