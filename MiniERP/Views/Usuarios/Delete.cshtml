@model MiniERP.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2 class="text-danger">¿Eliminar Usuario?</h2>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i>
    ¿Estás seguro de eliminar al usuario <strong>@Model.Email</strong>?
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
</form>
