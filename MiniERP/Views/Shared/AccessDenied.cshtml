@{
    ViewData["Title"] = "Acceso denegado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning shadow-lg">
                <div class="card-header bg-warning text-dark d-flex align-items-center">
                    <i class="bi bi-shield-lock-fill me-2"></i>
                    <h4 class="mb-0">Acceso denegado</h4>
                </div>
                <div class="card-body">
                    <p class="lead text-muted">
                        No tienes permisos suficientes para acceder a esta sección.
                    </p>
                    <hr />
                    <p class="text-secondary">
                        Si consideras que deberías tener acceso, ponte en contacto con el administrador del sistema.
                    </p>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house-door-fill"></i> Ir al Dashboard
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                    </a>
                </div>
                <div class="card-footer text-muted text-end">
                    MiniERP © @DateTime.Now.Year
                </div>
            </div>
        </div>
    </div>
</div>
